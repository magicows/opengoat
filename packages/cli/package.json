{
  "name": "opengoat",
  "version": "2026.2.14",
  "description": "OpenGoat organization runtime CLI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marian2js/opengoat.git",
    "directory": "packages/cli"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "opengoat": "bin/opengoat"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && cp ../../README.md . && tsc -p tsconfig.build.json && node scripts/copy-ui-build.mjs",
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "start": "node bin/opengoat",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "@opengoat/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
